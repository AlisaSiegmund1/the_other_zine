<%= simple_form_for ([@issue, @contribution]) do |f| %>
<p>
  I want to contribute something to...
</p>
<%= f.input :con_type, collection: ['see', 'read', 'view', 'contribute', 'watch'], label:false%>
<p>
  Tell us something about your contribution:
</p>
<%= f.input :content, label:false %>

<div class="d-flex justify-content-between">
  <div>
    <p>
      Link ressources:
    </p>
    <%= f.input :link, label:false  %>
  </div>
  <div>
    <p>
      Upload images:
    </p>
    <%= f.input :photo, as: :file, label:false  %>
  </div>

  <p>

  </div>
  What's your name?
</p>
<%= f.input :name, label:false  %>
<p>
  What's your Email?
</p>
<%= f.input :email, label:false  %>
<p>
  Do you want your contribution to be published?
</p>
<%= f.input :published, label:false  %>

<%= f.submit "Save changes"%>
<% end %>

