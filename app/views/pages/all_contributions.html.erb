<table style="width:100%">
  <tr>
    <th>Type</th>
    <th>Content</th>
    <th>Email</th>
    <th>Issue</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
<% @contributions.each do |contribution| %>
  <tr>
    <td><%= contribution.contribution_type %></td>
    <td><%= contribution.contribution_content[0..30] ...%></td>
    <td><%= contribution.email%></td>
    <td>Issue #<%= contribution.issue_id %></td>
    <td><%= link_to 'edit', '#' %></td>
    <td><%= link_to 'delete', '#'%></td>
  </tr>
  <% end %>
</table>
